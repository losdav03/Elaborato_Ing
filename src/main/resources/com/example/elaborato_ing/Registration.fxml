<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.elaborato_ing.LoginController">

    <!-- Immagine di sfondo -->
    <ImageView fitHeight="441.0" fitWidth="608.0" layoutX="-5.0">
        <Image url="@sfondoLogin.jpeg" />
    </ImageView>

    <!-- Titolo -->
    <Label layoutX="223.0" layoutY="98.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Registrazione" />

    <!-- Nome -->
    <Label layoutX="132.0" layoutY="151.0" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Nome:" />
    <TextField fx:id="nameField" layoutX="199.0" layoutY="148.0" prefWidth="200" />

    <!-- Cognome -->
    <Label layoutX="121.0" layoutY="191.0" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Cognome:" />
    <TextField fx:id="surnameField" layoutX="199.0" layoutY="188.0" prefWidth="200" />

    <!-- Username -->
    <Label layoutX="120.0" layoutY="241.0" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Username:" />
    <TextField fx:id="usernameField" layoutX="200.0" layoutY="238.0" prefWidth="200" />

    <!-- Password -->
    <Label layoutX="115.0" layoutY="291.0" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Password:" />
    <PasswordField fx:id="passwordField" layoutX="199.0" layoutY="288.0" prefWidth="200" />

    <!-- Pulsante Registrati -->
    <Button layoutX="249.0" layoutY="327.0" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Registrati" />

    <!-- Link per tornare al login -->
    <Label layoutX="182.0" layoutY="385.0" onMouseClicked="#goToLogin" style="-fx-font-size: 12px; -fx-text-fill: white;" text="Already have an account? Click here to login" />

</Pane>
